{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "custName": {
            "type": "string",
            "metadata": {
                "description": "Customer name environment is created for"
            }
        },
        "adminUserName": {
            "type": "string",
            "metadata": {
                "description": "admin username of the VM"
            }
        },
        "adminPassword": {
            "type": "securestring",
            "minLength": 8,
            "metadata": {
                "description": "admin password for VM"
            }
        },
        "custVnetAddrSpace": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the HUB virtual network"
            },
            "defaultValue": "10.0.0.0/16"
        },
        "dataSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the data subnet"
            },
            "defaultValue": "10.0.0.0/24"
        },
        "ediSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the EDI subnet"
            },
            "defaultValue": "10.0.1.0/24"
        },
        "rdsSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the RDS subnet"
            },
            "defaultValue": "10.0.2.0/24"
        },
        "webSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the web subnet"
            },
            "defaultValue": "10.0.3.0/24"
        }
    },
    "variables": {
        "location": "EastUS2",
        "_artifactsLocation": "https://raw.githubusercontent.com/erkup/networking/reduceParametersAddReadme/",
        "resourceTags": {
            "Demo": "FakeCustomer",
            "Tag2": "Example"
        },
        "networkSettings": {
            "virtualNetworkRG": "[concat(parameters('custName'),'-network-rg')]",
            "networkTemplateUri": "[uri(variables('_artifactsLocation'), concat('nestedVnetDeploy/azuredeploy.network.json'))]",
            "custVnet": "[concat(parameters('custName'), '-vnet')]",
            "dataSubnet": "[concat(parameters('custName'), 'data-snet')]",
            "ediSubnet": "[concat(parameters('custName'), 'edi-snet')]",
            "rdsSubnet": "[concat(parameters('custName'), 'rds-snet')]",
            "webSubnet": "[concat(parameters('custName'), 'web-snet')]",
            "nsgName": "[concat(parameters('custName'), '-Base-NSG')]"
        },
        "sqlConfig": {
            "sqlTemplateUri": "[uri(variables('_artifactsLocation'), concat('vmDeploy/azuredeploy.sql.json'))]",
            "sqlRG": "[concat(parameters('custName'), '-sql-rg')]",
            "subnetRef": "[resourceId('Microsoft.Network/virtualNetworks/subnets', variables('networkSettings').dataSubnet, variables('networkSettings').dataSubnet)]",
            "dataDisksLuns": "[array(range(0 ,variables('dbSizeMedium').sqlDataDiskCount))]",
            "logDisksLuns": "[array(range(variables('dbSizeMedium').sqlDataDiskCount, variables('dbSizeMedium').sqlLogDiskCount))]",
            "dataDisks": {
                "createOption": "empty",
                "caching": "ReadOnly",
                "writeAcceleratorEnabled": false,
                "storageAccountType": "Premium_LRS",
                "diskSizeGB": 1023
            }
        },
        "dbSizeMedium": {
            "virtualMachineSize": "Standard_DS13_v2",
            "numberOfVms": 2,
            "sqlDataDiskCount": 2,
            "sqlLogDiskCount": 2
        },
        "machineSettings": {
            "adminUsername": "[parameters('adminUserName')]",
            "adminPassword": "[parameters('adminPassword')]"
        }
    },

    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "location": "[variables('location')]",
            "name": "[variables('networkSettings').virtualNetworkRG]",
            "tags": "[variables('resourceTags')]",
            "properties": {
            }
        },
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "location": "[variables('location')]",
            "name": "[variables('sqlConfig').sqlRG]",
            "tags": "[variables('resourceTags')]",
            "properties": {
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-03-01",
            "name": "SQL-deploy",
            "dependsOn": [
                "[variables('sqlConfig').sqlRG]"
            ],
            "resourceGroup": "[variables('sqlConfig').sqlRG]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('sqlConfig').sqlTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "custName":{
                        "value":"[parameters('custName')]"
                    },
                    "subnetRef": {
                        "value": "[variables('sqlConfig').subnetRef]"
                    },
                    "virtualMachineSize": {
                        "value": "[variables('dbSizeMedium').virtualMachineSize]"
                    },
                    "sqlDataDisksCount": {
                        "value": "[variables('dbSizeMedium').sqlDataDiskCount]"
                    },
                    "sqlLogDisksCount": {
                        "value": "[variables('dbSizeMedium').sqlLogDiskCount]"
                    },
                    "dataDisks": {
                        "value": "[variables('sqlConfig').dataDisks]"
                    },
                    "adminUsername": {
                        "value": "[variables('machineSettings').adminUsername]"
                    },
                    "adminPassword": {
                        "value":"[variables('machineSettings').adminPassword]"
                    },
                    "dataDisksLUNs":"[variables('sqlConfig').dataDisksLuns]",
                    "logDisksLuns":"[variables('sqlConfig').logDisksLuns]"
                }
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-03-01",
            "name": "network-deploy",
            "dependsOn": [
                "[variables('networkSettings').virtualNetworkRG]"
            ],
            "resourceGroup": "[variables('networkSettings').virtualNetworkRG]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkSettings').networkTemplateUri]",
                    "contentVersion": "1.0.0.0"
                },
                               "parameters": {
                    "custVnet": {
                        "value": "[variables('networkSettings').custVnet]"
                    },
                    "custVnetAddrSpace": {
                        "value": "[parameters('custVnetAddrSpace')]"
                    },
                    "dataSubnet": {
                        "value": "[variables('networkSettings').dataSubnet]"
                    },
                    "dataSubnetPrefix": {
                        "value": "[parameters('dataSubnetPrefix')]"
                    },
                    "ediSubnet": {
                        "value": "[variables('networkSettings').ediSubnet]"
                    },
                    "ediSubnetPrefix": {
                        "value": "[parameters('ediSubnetPrefix')]"
                    },
                    "rdsSubnet": {
                        "value": "[variables('networkSettings').rdsSubnet]"
                    },
                    "rdsSubnetPrefix": {
                        "value": "[parameters('rdsSubnetPrefix')]"
                    },
                    "webSubnet": {
                        "value": "[variables('networkSettings').webSubnet]"
                    },
                    "webSubnetPrefix": {
                        "value": "[parameters('webSubnetPrefix')]"
                    },
                    "nsgName": {
                        "value": "[variables('networkSettings').nsgName]"
                    }
                }
            }
        }       
    ],
    "outputs": {
    }
}