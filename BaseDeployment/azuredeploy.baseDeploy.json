{
    "$schema": "https://schema.management.azure.com/schemas/2018-05-01/subscriptionDeploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "custName": {
            "type": "string",
            "metadata": {
                "description": "Customer name environment is created for"
            }
        },
        "custVnetAddrSpace": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the HUB virtual network"
            },
            "defaultValue": "10.0.0.0/16"
        },
        "dataSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the data subnet"
            },
            "defaultValue": "10.0.0.0/24"
        },
        "ediSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the EDI subnet"
            },
            "defaultValue": "10.0.1.0/24"
        },
        "rdsSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the RDS subnet"
            },
            "defaultValue": "10.0.2.0/24"
        },
        "webSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the web subnet"
            },
            "defaultValue": "10.0.3.0/24"
        }
    },
    "variables": {
        "virtualNetworkRGName": "[concat(parameters('custName'),'-',variables('virtualNetworkRG'))]",
        "networkTemplateUri": "[uri(variables('_artifactsLocation'), concat('nestedVnetDeploy/azuredeploy.network.json'))]", 
         "location": "EastUS2",
                // "The Azure location to deploy all resources"
    
        "_artifactsLocation": "https://raw.githubusercontent.com/erkup/networking/reduceParametersAddReadme/",
        // "Path to the repository or storage account where the linked templates can be found
        "virtualNetworkRG": "network-rg",
        "resourceTags": {
                "Demo": "FakeCustomer",
                "Tag2": "Example"
            },
        "custVnet": "[concat(parameters('custName'), '-vnet')]",
        // Customer Vnet name
        "dataSubnet": "[concat(parameters('custName'), 'data-snet')]",
        "ediSubnet": "[concat(parameters('custName'), 'edi-snet')]",
        "rdsSubnet": "[concat(parameters('custName'), 'rds-snet')]",
        "webSubnet": "[concat(parameters('custName'), 'web-snet')]",
        "nsgName": "[concat(parameters('custName'), '-Base-NSG')]"
    },
    
    "resources": [
        {
            "type": "Microsoft.Resources/resourceGroups",
            "apiVersion": "2019-10-01",
            "location": "[variables('location')]",
            "name": "[variables('virtualNetworkRGName')]",
            "tags": "[variables('resourceTags')]",
            "properties": {
            }
        },
        {
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2019-03-01",
            "name": "networking-deploy",
            "dependsOn": [
                "[variables('virtualNetworkRGName')]"
            ],
            "resourceGroup": "[variables('virtualNetworkRGName')]",
            "properties": {
                "mode": "Incremental",
                "templateLink": {
                    "uri": "[variables('networkTemplateUri')]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "custVnet": {
                        "value": "[variables('custVnet')]"
                    },
                    "custVnetAddrSpace": {
                        "value": "[parameters('custVnetAddrSpace')]"
                    },
                    "dataSubnet": {
                        "value": "[variables('dataSubnet')]"
                    },
                    "dataSubnetPrefix": {
                        "value": "[parameters('dataSubnetPrefix')]"
                    },
                    "ediSubnet": {
                        "value": "[variables('ediSubnet')]"
                    },
                    "ediSubnetPrefix": {
                        "value": "[parameters('ediSubnetPrefix')]"
                    },
                    "rdsSubnet": {
                        "value": "[variables('rdsSubnet')]"
                    },
                    "rdsSubnetPrefix": {
                        "value": "[parameters('rdsSubnetPrefix')]"
                    },
                    "webSubnet": {
                        "value":"[variables('webSubnet')]"
                    },
                    "webSubnetPrefix": {
                        "value": "[parameters('webSubnetPrefix')]"
                    },
                    "nsgName": {
                        "value": "[variables('nsgName')]"
                    }
                }
            }
        }
    ],
    "outputs": {
    }
}