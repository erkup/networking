{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.0",
  "parameters": {
    "subnets": {
      "type": "object"
    },
    "nsgName": {
      "type": "string"
    }
  },
  "variables": {
    "nsgId": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
  },
  "resources": [
    {
      "apiVersion": "2019-12-01",
      "type": "Microsoft.Network/virtualNetworks/subnets",
      "name": "[concat(parameters('subnets').subnetConfigs[0].virtualNetworkName, '/', parameters('subnets').subnetConfigs[0].subnetName)]",
      "location": "[resourceGroup().location]",
      "properties": {
        "addressPrefix": "[parameters('subnets').subnetConfigs[0].subnetAddressPrefix]",
        "networkSecurityGroup": {
          "id": "[variables('nsgId')]"
        }
      }
    }
  ]
}