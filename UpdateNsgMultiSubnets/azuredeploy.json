{
  "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
  "contentVersion": "1.0.0.1",
  "parameters": {
    "nsgName": {
      "type": "string",
      "metadata": {
        "description": "New or existing NSG name"
      },
      "defaultValue": "networkSecurityGroup1"
    },
    "nsgResourceGroupName": {
      "type": "string",
      "defaultValue": "NSGautomate-RG"
    },
    "subnets": {
      "type": "object"
    },
    "_artifactsLocation": {
      "type": "string",
      "metadata": {
        "description": "The base URI where artifacts required by this template are located."
      },
      "defaultValue": "https://raw.githubusercontent.com/Azure/azure-quickstart-templates/master/201-nsg-add-to-existing-subnet/"
    },
    "_artifactsLocationSasToken": {
      "type": "securestring",
      "metadata": {
        "description": "The sasToken required to access _artifactsLocation."
      },
      "defaultValue": ""
    }
  },
  "variables": {
  },
  "resources": [
    {
      "type": "Microsoft.Network/networkSecurityGroups",
      "name": "[parameters('nsgName')]",
      "location": "[resourceGroup().location]",
      "apiVersion": "2019-12-01",
      "properties": {
        "securityRules": [
          {
            "name": "SSH",
            "properties": {
              "description": "Allows SSH traffic",
              "protocol": "Tcp",
              "sourcePortRange": "*",
              "destinationPortRange": "22",
              "sourceAddressPrefix": "*",
              "destinationAddressPrefix": "*",
              "access": "Allow",
              "priority": 100,
              "direction": "Inbound"
            }
          }
        ]
      }
    },
    {
      "apiVersion": "2019-10-01",
      "name": "deploy",
      "type": "Microsoft.Resources/deployments",
      "resourceGroup": "[parameters('nsgResourceGroupName')]",
      "dependsOn": [
        "[parameters('nsgName')]"
      ],
      "copy": {
        "name": "subnet-loop",
        "count": "[length(parameters('subnets').subnetConfigs)]"
      },
      "properties": {
        "mode": "Incremental",
        "templateLink": {
          "uri": "[concat(parameters('_artifactsLocation'), concat('nested/updateSubnet.json', parameters('_artifactsLocationSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parametersLink": {
          "uri": "[concat(parameters('_artifactsLocation'), concat('nested/azuredeploy.parameters.json', parameters('_artifactsLocationSasToken')))]",
          "contentVersion": "1.0.0.0"
        },
        "parameters": {
          "virtualNetworkName": {
            "value": "[parameters('subnets').subnetConfigs[copyIndex()].virtualNetworkName]"
          },
          "subnetName": {
            "value": "[parameters('subnets').subnetConfigs[copyIndex()].subnetName]"
          },
          "subnetAddressPrefix": {
            "value": "[reference(resourceId(parameters('subnets').subnetConfigs[copyIndex()].virtualNetworkResourceGroupName, 'Microsoft.Network/virtualNetworks/subnets', parameters('virtualNetworkName'), parameters('subnetName')), '2018-03-01').addressPrefix]"
          },
          "nsgId": {
            "value": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
          }
        }
      }
    }
  ],
  "outputs": {
  }
}