{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "custVnetName": {
            "type": "string",
            "metadata": {
                "description": "The name for the virtual network"
            }
        },
        "custVnetAddrSpace": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the HUB virtual network"
            }
        },
        "dataSubnetName": {
            "type": "string",
            "metadata": {
                "description": "The name for the trusted subnet"
            }
        },
        "dataSubnetPrefix": {
            "type": "string",
            "metadata": {
                "description": "The prefix for the data subnet"
            }
        }
    },
    "functions": [],
    "variables":{},
    "resources": [
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-12-01",
            "name":"[concat(parameters('custVnetName'),'-deploy')]",
            "location":"[resourceGroup().location]",
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('custVnetAddrSpace')]"
                    ]
                }, 
                "subnets": [
                    {
                        "name": "[parameters('dataSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('dataSubnetPrefix')]"
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
    }
}
