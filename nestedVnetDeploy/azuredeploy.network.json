{
    "$schema": "https://schema.management.azure.com/schemas/2019-04-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "custName": {
            "type": "string",
            "metadata": {
                "description": "Customer name environment is created for"
            }
        },
        "custVnet": {
            "type": "string",
            "metadata": {
                "description": "The name for the virtual network"
            }
        },
        "custVnetAddrSpace": {
            "type": "string"
        },
        "dataSubnet": {
            "type": "string"
        },
        "dataSubnetPrefix": {
            "type": "string"
        },
        "ediSubnet": {
            "type": "string"
        },
        "ediSubnetPrefix": {
            "type": "string"
        },
        "rdsSubnet": {
            "type": "string"
        },
        "rdsSubnetPrefix": {
            "type": "string"
        },
        "webSubnet": {
            "type": "string"
        },
        "webSubnetPrefix": {
            "type": "string"
        },
        "nsgName": {
            "type": "string"
        }

    },
    "functions": [
    ],
    "variables": {
        "custVnetName": "[concat(parameters('custName'),'-',parameters('custVnet'))]",
        "dataSubnetName": "[concat(parameters('custName'),'-',parameters('dataSubnet'))]",
        "ediSubnetName": "[concat(parameters('custName'),'-',parameters('ediSubnet'))]",
        "rdsSubnetName": "[concat(parameters('custName'),'-',parameters('rdsSubnet'))]",
        "webSubnetName": "[concat(parameters('custName'),'-',parameters('webSubnet'))]"
    },
    "resources": [
        {
            "type": "Microsoft.Network/networkSecurityGroups",
            "name": "[parameters('nsgName')]",
            "location": "[resourceGroup().location]",
            "apiVersion": "2019-12-01",
            "properties": {
                "securityRules": [
                    {
                        "name": "AD-IN",
                        "properties": {
                            "description": "Allows AD traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRanges": [
                                "53",
                                "88",
                                "53",
                                "88",
                                "135",
                                "137",
                                "138",
                                "139",
                                "389",
                                "636",
                                "3268",
                                "3269",
                                "9389",
                                "49152-65535"   
                            ],                            
                            "sourceAddressPrefix": "VirtualNetwork",
                            "destinationAddressPrefix": "VirtualNetwork",
                            "access": "Allow",
                            "priority": 200,
                            "direction": "Inbound"
                        } 
                    },
                    {
                        "name": "FileIn",
                        "properties": {
                            "description": "Allows File Traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRanges": [
                                "445",
                                "500",
                                "4500"
                            ],
                            "sourceAddressPrefix": "virtualNetwork",
                            "destinationAddressPrefix": "virtualNetwork",
                            "access": "Allow",
                            "priority": 205,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "APP_SQL-IN",
                        "properties": {
                            "description": "Allows SQL Traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRanges": [
                                "1433",
                                "1434",
                                "4022"
                            ],
                            "sourceAddressPrefix": "virtualNetwork",
                            "destinationAddressPrefix": "virtualNetwork",
                            "access": "Allow",
                            "priority": 210,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "KASEYA_5721_IN",
                        "properties": {
                            "description": "Allows Kaseya Traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "5721",
                            "sourceAddressPrefix": "virtualNetwork",
                            "destinationAddressPrefix": "virtualNetwork",
                            "access": "Allow",
                            "priority": 215,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "PWRSHELL_MGMT-IN",
                        "properties": {
                            "description": "Allows PS Traffic",
                            "protocol": "*",
                            "sourcePortRange": "*",
                            "destinationPortRange": "5985-5986",
                            "sourceAddressPrefix": "virtualNetwork",
                            "destinationAddressPrefix": "virtualNetwork",
                            "access": "Allow",
                            "priority": 220,
                            "direction": "Inbound"
                        }
                    },
                    {
                        "name": "ICMP-IN",
                        "properties": {
                            "description": "Allows ICMP Traffic",
                            "protocol": "Icmp",
                            "sourcePortRange": "*",
                            "destinationPortRange": "*",
                            "sourceAddressPrefix": "virtualNetwork",
                            "destinationAddressPrefix": "virtualNetwork",
                            "access": "Allow",
                            "priority": 225,
                            "direction": "Inbound"
                        }
                    }
                ]
            }
        },
        {
            "type": "Microsoft.Network/virtualNetworks",
            "apiVersion": "2019-12-01",
            "name": "[variables('custVnetName')]",
            "location": "[resourceGroup().location]",
            "dependsOn": [
                "[parameters('nsgName')]"
            ],
            "properties": {
                "addressSpace": {
                    "addressPrefixes": [
                        "[parameters('custVnetAddrSpace')]"
                    ]
                },
                "subnets": [
                    {
                        "name": "[variables('dataSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('dataSubnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('ediSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('ediSubnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('rdsSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('rdsSubnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                            }
                        }
                    },
                    {
                        "name": "[variables('webSubnetName')]",
                        "properties": {
                            "addressPrefix": "[parameters('webSubnetPrefix')]",
                            "networkSecurityGroup": {
                                "id": "[resourceId('Microsoft.Network/networkSecurityGroups', parameters('nsgName'))]"
                            }
                        }
                    }
                ]
            }
        }
    ],
    "outputs": {
    }
}
